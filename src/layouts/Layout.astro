---
import "../styles/global.css"
import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/global.css"
import "../styles/bootstrap_extension.css"
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

interface Props {
    title: string,
    content: string,
    customClass?: string,
}

const {title = 'default', content = 'defaultContent',customClass} = Astro.props;
---
<!doctype html>
<html lang="de">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="description" content={content}/>
    <meta name="author" content="https://github.com/sc1zox"/>
    <meta name="google-site-verification" content="U60Pfx448qWL4zMRBTCqibt55GFe9mJzO9sUNcO2hT0" />
    <title>{title}</title>
</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <Header/>
</header>
<main class={customClass} id="main-content">
    <slot/>
</main>
<Footer/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>
</html>
