---
import Layout from "../layouts/Layout.astro";
import TextBanner from "../components/textBanner.astro";
---
<Layout title="Success Page Title Placeholder" content="Success Page Content Placeholder" customClass="container-fluid">
    <div class="d-flex justify-content-center align-items-center flex-column">
        <TextBanner headline="Glückwunsch!" subline="Ihre Kontaktnachricht wurde erfolgreich abgesendet!" paragraph="Wir werden uns unverzüglich bei Ihnen melden!"></TextBanner>
        <button type="button" class="btn btn-primary mt-3" id="success-back-button"> Zurück</button>
    </div>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById('success-back-button');
        if (btn) {
            btn.addEventListener('click', () => window.location.href = "/")
        }
    })
</script>