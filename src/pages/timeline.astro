---
import Layout from "../layouts/Layout.astro";
import "../styles/timeline.css"
import {Image} from "astro:assets";
import timelineImage1 from "../assets/auftritt_closeup.webp"
import timelineImage2 from "../assets/auftritt_dirmstein.webp";

interface TimelineEvent {
    year: string;
    title: string;
    description: string;
    image?: ImageMetadata;
    position: "left" | "right";
}

const events: TimelineEvent[] = [
    {
        year: "2005",
        title: "Von Garagen-Jams zu den Holidays",
        description: "Mit drei Akkorden und einem Traum begannen wir in Roberts Garage zu jammen. Nach unzähligen Pizza-Abenden und Nachbarschaftsbeschwerden war klar: Wir sind The Holidays!",
        image: timelineImage1,
        position: "left"
    }, {
        year: "2007",
        title: "Kerwe-Debüt mit Startschwierigkeiten",
        description: "Unser erster Auftritt bei der Dirmsteiner Kerwe! Thomas' Gitarrensaite riss mitten im ersten Song, aber das Publikum tobte trotzdem. Nach dem dritten Bier merkte niemand mehr, dass wir eigentlich nervös waren.",
        image: timelineImage2,
        position: "right"
    }, {
        year: "2009",
        title: "Die Rock-Explosion im Weingut",
        description: "Beim Weinfest im Müller-Weingut brachten wir das alte Fachwerkgebäude zum Beben. Der Winzer meinte: 'Ihr habt mehr Menschen angelockt als der Jahrgang 2003!' Ein kleiner Verstärker ging in Flammen auf - Rock'n'Roll pur!",
        image: timelineImage1,
        position: "left"
    }, {
        year: "2010",
        title: "Umbesetzung und neue Energie",
        description: "Als Christoph an den Drums zu uns stieß, bekam die Band einen völlig neuen Groove. Der legendäre Soundcheck in der Stadthalle, bei dem versehentlich die Sprinkleranlage ausgelöst wurde, bleibt unvergessen.",
        image: timelineImage2,
        position: "right"
    }, {
        year: "2015",
        title: "Das Open-Air-Jahr und der Soundtest",
        description: "Fünf Open-Air-Festivals in einem Sommer! Der Tiefpunkt: Als der Regenguss beim Waldparkfestival unsere Technik bedrohte. Der Höhepunkt: 300 Menschen sangen im Regen mit uns 'Sweet Caroline' - pure Gänsehaut.",
        image: timelineImage1,
        position: "left"
    }, {
        year: "2025",
        title: "20 Jahre Holidays - Die Jubiläumstour",
        description: "Nach zwei Jahrzehnten auf der Bühne gehen wir auf große Pfalz-Tour mit 20 Shows in 20 Städten. Größer, lauter und mit einem speziellen Best-of-Programm, das unsere musikalische Reise feiert. Und ihr seid alle eingeladen!",
        image: timelineImage2,
        position: "right"
    }
];
---

<Layout
        title="Bandgeschichte The Holidays | Meilensteine von 2005 bis heute"
        content="Entdecke die musikalische Reise der Coverband The Holidays - von der Garagenband bis zu legendären Auftritten in Dirmstein und der Region. 20 Jahre Bandgeschichte im Überblick."
>
    <section class="py-5 timeline-section">
        <div class="container">
            <h1 class="text-center gradient-text py-2 mb-5">Unsere Geschichte - Von Garagen-Rockern zu Pfalz-Legenden</h1>

            <p class="text-center lead mb-5">Seit 2005 bringen wir die Pfalz zum Beben. Hier sind die Meilensteine unserer musikalischen Reise - mit allen Höhen, Tiefen und unvergesslichen Momenten.</p>

            <div class="timeline">
                <div class="timeline-line"></div>
                {events.map((event) => (
                        <div class={`timeline-item ${event.position}`}>
                            <div class="timeline-badge">{event.year}</div>
                            <div class="timeline-panel card bg-dark text-white border-secondary hover-effect">
                                {event.image &&
                                        <Image src={event.image} class="card-img-top event-image" alt={`The Holidays Band im Jahr ${event.year}: ${event.title}`}/>
                                }
                                <div class="card-body">
                                    <h4 class="card-title">{event.title}</h4>
                                    <p class="card-text">{event.description}</p>
                                </div>
                            </div>
                        </div>
                ))}
            </div>

            <div class="text-center mt-5">
                <p class="lead">Und diese Geschichte geht weiter...</p>
                <a href="/kontakt" class="btn btn-primary btn-lg mt-3">Werde Teil unserer Geschichte!</a>
            </div>
        </div>
    </section>
</Layout>